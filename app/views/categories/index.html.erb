    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= category.name %></td>
        <td><%= link_to 'show',category_path(category)%>  <%=link_to 'edit' ,edit_category_path(category.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
